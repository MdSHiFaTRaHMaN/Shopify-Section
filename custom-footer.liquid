<style>
.footer {
  padding: 80px 20px;
}

.footer__container {
  max-width: 1600px;
  margin: 0 auto;
}

/* Desktop Layout */
.footer__desktop {
  display: block;
}

.footer__mobile {
  display: none;
}

.footer__grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20px;
}

.footer__column {
  min-width: 0;
}

.footer__title {
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin: 0 0 20px 0;
}

.footer__list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__list li {
  margin-bottom: 12px;
}

.footer__link {
  color: inherit;
  text-decoration: none;
  font-size: 16px;
  line-height: 1.6;
  transition: opacity 0.2s;
}

.footer__link:hover {
  opacity: 0.7;
}

.footer__contact-item {
  display: flex;
  gap: 10px;
  align-items: center;
  margin-bottom: 20px;
}

.footer__icon {
  font-size: 18px;
  margin-top: 2px;
}

.footer__newsletter-text {
  font-size: 14px;
  line-height: 1.6;
  margin: 0 0 20px 0;
}

.footer__newsletter-form {
  margin-bottom: 30px;
}

.footer__newsletter-input-wrapper {
  display: flex;
  gap: 0;
}

.footer__newsletter-input {
  flex: 1;
  padding: 12px 16px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background: transparent;
  font-size: 14px;
  color: inherit;
}

.footer__newsletter-input::placeholder {
  color: inherit;
  opacity: 0.6;
}

.footer__newsletter-button {
  padding: 12px 24px;
  border: none;
  cursor: pointer;
  font-size: 12px;
  font-weight: 500;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  transition: opacity 0.2s;
  white-space: nowrap;
}

.footer__newsletter-button:hover {
  opacity: 0.9;
}

.footer__social {
  margin-top: 30px;
}

.footer__social-title {
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin: 0 0 15px 0;
}

.footer__social-icons {
  display: flex;
  gap: 20px;
}

.footer__social-link {
  color: inherit;
  font-size: 20px;
  transition: opacity 0.2s;
}

.footer__social-link:hover {
  opacity: 0.7;
}

a.footer__social-link img {
    width: 25px;
}

/* Mobile Layout */
@media (max-width: 768px) {
  .footer {
    padding: 40px 20px;
  }

  .footer__desktop {
    display: none;
  }

  .footer__mobile {
    display: block;
  }

  .footer__mobile-newsletter {
    text-align: center;
    margin-bottom: 30px;
  }

  .footer__newsletter-input-wrapper {
    flex-direction: column;
    gap: 0;
  }

  .footer__newsletter-input,
  .footer__newsletter-button {
    width: 100%;
  }

  .footer__accordion {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 20px 0;
  }

  .footer__accordion-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    list-style: none;
  }

  .footer__accordion-title::-webkit-details-marker {
    display: none;
  }

  .footer__accordion[open] .footer__accordion-icon {
    transform: rotate(180deg);
  }

  .footer__accordion-icon {
    font-size: 10px;
    transition: transform 0.3s;
  }

  .footer__accordion .footer__list {
    margin-top: 15px;
  }

  .footer__mobile-social {
    text-align: center;
    padding: 30px 0;
  }

  .footer__social-icons {
    justify-content: center;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .footer__grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .footer__newsletter {
    grid-column: span 3;
  }
}
</style>

